@model IEnumerable<ShopTARgv23.Models.RealEstates.RealEstatesIndexViewModel>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="RealEstates" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
    RealEstate
</div>

<form method="post">
    <table class="table table-hover">
        <thed>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Location</th>
                <th scope="col">Size</th>
                <th scope="col">RoomNumber</th>
                <th scope="col"></th>
            </tr>
        </thed>
        <tbody>
            @foreach (var RealEstate in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@RealEstate.Location</td>
                    <td>@RealEstate.Size</td>
                    <td>@RealEstate.RoomNumber</td>
                    <td>
                        <a asp-action="details" asp-controller="RealEstates" asp-route-id="@RealEstate.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="RealEstates" asp-route-id="@RealEstate.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="RealEstates" asp-route-id="@RealEstate.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>

                rowNumber++;
            }
        </tbody>
    </table>
</form>