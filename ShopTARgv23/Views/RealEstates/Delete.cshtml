@model ShopTARgv23.Models.RealEstates.RealEstatesDeleteViewModel

@{
    ViewData["Title"] = "RealEstates Delete";
}

<div>
    <h4>RealEstate</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Location)
        </div>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Size)
        </div>

        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.RoomNumber)
        </div>

        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>

        @foreach (var file in Model.Image)
        {
            <partial name="_Images" model="file" />
        }

        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="RealEstates" class="btn btn-success">Back</a>
        </form>


    </dl>
</div>